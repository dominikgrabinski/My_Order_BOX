{% extends "::base.html.twig" %}

{% block title %}BoxBundle:User:user{% endblock %}

{% block body %}
    <div class="container">
        <div class="pull-right">
            <h3>
                 {% if app.user %}
                Witaj: {{ app.user }}
                {% if is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('box_user_admin') }}"><button type="button" color="white" class="btn btn-danger">
                PANEL ADMINA
            </button></a>
                {% endif %}
                    <a href="{{ path('fos_user_security_logout') }}"><button type="button" class="btn btn-warning">Wyloguj się</button></a>
            {% endif %}
            </h3>
        </div>
    </div>
    <div class="container">        
        <table class="table table-bordered">
            <tr>
                <th>Zleceniodawca:</th>
                <th>Zleceniobiorca:</th>
                <th>Tytuł zlecenia:</th>
                <th>Status zlecenia:</th>
                <th>Data zmiany zlecenia:</th>
                {% if is_granted('ROLE_ADMIN') %}
                    <th>Dodatkowe:</th>
                {% endif %}
            </tr>
            {% for row in commision %}
                <tr><td>{{ row.user }}
                <td>{{ row.admin }} </td>
                <td>{{ row.title }} </td>
                <td><p class="bg-warning">{{ row.status.title }}</p></td>
                <td><p class="bg-success">{{ row.addDate|date('H:i d-m-Y') }}</p></td>
                    {% if is_granted('ROLE_ADMIN') %}
                        <td><a href="{{ path('commission_index') }}">
                            <button type="button" color="white" class="btn btn-info">
                                Edytuj
                            </button> 
                                </a></td></tr>
                    {% endif %}    
                <hr>
            {% endfor %}
        </table>
    </div>        
{% endblock %}
