{% extends 'base.html.twig' %}

{% block body %}
<div class="container">   
    <h1 class="text-center"><p class="bg-primary">Zlecenie:</p></h1>

    <table class="table table-bordered">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ commission.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ commission.title }}</td>
            </tr>
            <tr>
                <th>Kerg</th>
                <td>{{ commission.kERG }}</td>
            </tr>
            <tr>
                <th>Adddate</th>
                <td>{% if commission.addDate %}{{ commission.addDate|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Statusdate</th>
                <td>{% if commission.statusDate %}{{ commission.statusDate|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>
        <div class="text-center">
            {{ form_start(delete_form) }}
                <input type="submit" class="btn-danger" value="Usuń zlecenie">
            {{ form_end(delete_form) }}
        </div>
    <ul>
        <li>
            <a href="{{ path('commission_index') }}">
                <button type="button" class="btn btn-warning">Powrót do listy zleceń
                </button>    
            </a>
        </li>
        <li>
            <a href="{{ path('commission_edit', { 'id': commission.id }) }}">
                <button type="button" class="btn btn-info">Edytuj zlecenie
                </button>
            </a>
        </li>

        <li>
        {% if is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('box_user_admin') }}"><button type="button" color="white" class="btn btn-danger">
                PANEL ADMINA
            </button></a>
                {% endif %}
        </li>        
    </ul>
</div>                
{% endblock %}
