{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
    <h1><h1 class="text-center"><p class="bg-primary">Lista zleceń:</p></h1>

    <table class="table table-bordered">
        <tbody>
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Kerg</th>
                <th>Adddate</th>
                <th>Statusdate</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for commission in commissions %}
            <tr>
                <td><a href="{{ path('commission_show', { 'id': commission.id }) }}">{{ commission.id }}</a></td>
                <td>{{ commission.title }}</td>
                <td>{{ commission.kERG }}</td>
                <td>{% if commission.addDate %}{{ commission.addDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if commission.statusDate %}{{ commission.statusDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('commission_show', { 'id': commission.id }) }}"><button type="button" class="btn btn-info">Pokaż zlecenie</button></a>
                        </li>
                        <li>
                            <a href="{{ path('commission_edit', { 'id': commission.id }) }}"><button type="button" class="btn btn-warning">Edytuj zlecenie</button></a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
    <ul>
        <li>
            <a href="{{ path('commission_new') }}"><button type="button" class="btn btn-success">Stwórz nowe zlecenie</button></a>
        </li>
        <li>
        {% if is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('box_user_admin') }}"><button type="button" color="white" class="btn btn-danger">
                PANEL ADMINA
            </button></a>
                {% endif %}
        </li>
    </ul>
{% endblock %}
