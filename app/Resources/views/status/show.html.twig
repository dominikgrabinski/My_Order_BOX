{% extends 'base.html.twig' %}

{% block body %}
<div class="container">   
    <h1 class="text-center">
        <p class="bg-primary">Status:</p>
    </h1>

    <table class="table table-bordered">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ status.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ status.title }}</td>
            </tr>
        </tbody>
    </table>
        <div class="text-center">
            {{ form_start(delete_form) }}
                <input type="submit" class="btn-danger" value="Usuń zlecenie">
            {{ form_end(delete_form) }}
        </div>
    <ul>
        <li>
            <a href="{{ path('status_index') }}">
                <button type="button" class="btn btn-warning">
                    Powrót do listy statusów
                </button>
            </a>
        </li>
        <li>
            <a href="{{ path('status_edit', { 'id': status.id }) }}">
                <button type="button" class="btn btn-info">
                    Edytuj status
                </button>
            </a>
        </li>
        <li>
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('box_user_admin') }}">
                    <button type="button" color="white" class="btn btn-danger">
                        PANEL ADMINA
                    </button></a>
            {% endif %}
        </li>
    </ul>
</div>            
{% endblock %}
